<Page x:Class="_1ozISIP2124_Mizin.Str1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_1ozISIP2124_Mizin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация" Background="LemonChiffon"> 

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
                    </Grid.ColumnDefinitions>
        <Label Content="Логин" Grid.Column="1" Grid.Row="1" 
               HorizontalAlignment="Center" VerticalAlignment="Center"
               FontFamily="Book Antiqua" FontSize="22"/>
        <Label Content="Пароль" Grid.Column="1" Grid.Row="2" 
               HorizontalAlignment="Center" VerticalAlignment="Center"
               FontFamily="Book Antiqua" FontSize="22"/>
        <TextBox x:Name="TxtBxLog" Grid.Column="2" Grid.Row="1" Height="50" Width="190"
                 FontFamily="Book Antiqua" FontSize="22" Background="Transparent"
                 ToolTip="Введите логин"/>
        <TextBlock Text="Логин или почта" Name="txtHintLogin" Grid.Column="2" Grid.Row="1" 
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontFamily="Book Antiqua" FontSize="22" Foreground="Gray" Background="Transparent"/>
        <PasswordBox x:Name="PassBx" Grid.Column="2" Grid.Row="2" Height="50" Width="190"
                     FontFamily="Book Antiqua" FontSize="22" Background="Transparent"
                     ToolTip="Введите пароль"/>
        <TextBlock Text="Пароль" Name="txtHintPass" Grid.Column="2" Grid.Row="2" 
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontFamily="Book Antiqua" FontSize="22" Foreground="Gray" Background="Transparent"/>
        <Button Name="BtnAuth" Content="Вход" Grid.Column="2" Grid.Row="3" Height="50" Width="190"
                ToolTip="Нажмите для входа в систему"
                FontFamily="Book Antiqua" FontSize="22" Background="PaleVioletRed"/> 
        <Button Name="btnReg" Content="Регистрация" Grid.Column="2" Grid.Row="4" Height="50" Width="190"
                ToolTip="Нажмите для регистрации"
                FontFamily="Book Antiqua" FontSize="22" Background="PaleVioletRed"/>


    </Grid>
</Page>

<Page x:Class="_1ozISIP2124_Mizin.Pages.User_managment"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_1ozISIP2124_Mizin.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="800"
      Background="White"
      Title="Управление пользователями">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
                     </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="45*"/>
            <ColumnDefinition Width="45*"/>
            <ColumnDefinition Width="70*"/>
            <ColumnDefinition Width="45*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Управление пользователями" Grid.Row="0" Grid.Column="2"  FontSize="20" Foreground="Black" Grid.ColumnSpan="3" HorizontalAlignment="Center"/>
        <Button Content="+ Добавление нового" Grid.Row="1" Grid.Column="1" Height="40" Width="150" Foreground="Black" Background="GhostWhite" HorizontalAlignment="Left"/>
        <Label Content="Фильтр по ролям:" Foreground="DimGray" Grid.Row="1" Grid.Column="3" HorizontalAlignment="Right" />
        <Label Content="Сортировать по:" Foreground="DimGray" Grid.Row="2" Grid.Column="3" HorizontalAlignment="Right" />
        <Label Content="Поиск:" Foreground="DimGray" Grid.Row="3" Grid.Column="3" HorizontalAlignment="Right" />
        <Button Content="Обновить"  Height="40" Width="100" Foreground="Black" Background="GhostWhite" Grid.Row="4" Grid.Column="4" VerticalAlignment="Top" />
        <Label Content="Всего пользователей" Grid.Row="4" Grid.Column="1" Foreground="Black" VerticalAlignment="Bottom"/>
        <ComboBox Name="RoleFilter" Grid.Column="4" Grid.Row="1"/>
    </Grid>
</Page>

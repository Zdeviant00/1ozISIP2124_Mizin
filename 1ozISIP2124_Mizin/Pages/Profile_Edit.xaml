<Page x:Class="_1ozISIP2124_Mizin.Pages.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_1ozISIP2124_Mizin.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="800"
      Background="White"
      Title="Редактирование профиля">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
           
        </Grid.ColumnDefinitions>
        <Label Content="Редактирование профиля" Grid.Row="0" Grid.Column="2"  FontSize="20" Foreground="Black" Grid.ColumnSpan="2" HorizontalAlignment="Center"/>
        <Label Content="Email:" Grid.Row="2" Grid.Column="0"  FontSize="14" Foreground="Black" HorizontalAlignment="Right"/>
        <Label Content="Имя:" Grid.Row="3" Grid.Column="0"  FontSize="14" Foreground="Black" HorizontalAlignment="Right" />
        <Label Content="Фамилия:" Grid.Row="4" Grid.Column="0"  FontSize="14" Foreground="Black" HorizontalAlignment="Right"/>
        <Label Content="Пол:" Grid.Row="5" Grid.Column="0"  FontSize="14" Foreground="Black" HorizontalAlignment="Right"/>
        <Label Content="Дата рождения:" Grid.Row="6" Grid.Column="0"  FontSize="14" Foreground="Black" HorizontalAlignment="Right"/>
        <Label Content="Страна:" Grid.Row="7" Grid.Column="0" FontSize="14" Foreground="Black" HorizontalAlignment="Right"/>
        <Label Content="Пароль:" Grid.Row="5" Grid.Column="4" FontSize="14" Foreground="Black" HorizontalAlignment="Right"/>
        <Label Content="Повтор пароля:" Grid.Row="6" Grid.Column="4" FontSize="14" Foreground="Black" HorizontalAlignment="Right"/>
        <Label Content="the.email@adress.com" Grid.Row="2" Grid.Column="1" FontSize="14" HorizontalAlignment="Left" Grid.ColumnSpan="2" Foreground="Gray"/>
        <Label Content="Смена пароля" Grid.Row="2" Grid.Column="4" FontSize="14" Foreground="Black" HorizontalAlignment="Center" Grid.ColumnSpan="2"/>
        <TextBlock Text="Оставьте эти поля незаполненными, если вы не хотите изменять пароль." Grid.Row="3" Grid.Column="4" FontSize="14" 
               Foreground="Black" HorizontalAlignment="Center" Grid.ColumnSpan="3" TextWrapping="Wrap" Width="260" Height="45"/>
        <Button Content="Сохранить"  Height="30" Width="100" Foreground="Black" Background="GhostWhite" Grid.Row="10" Grid.Column="2" VerticalAlignment="Top"/>
            <Button Content="Отмена" Height="30" Width="100" Foreground="Black" Background="GhostWhite" Grid.Row="10" Grid.Column="3" VerticalAlignment="Top"/>

        
        <TextBlock x:Name="FirstName" Text="Имя"  Grid.Row="3" Grid.Column="1" Height="20" Width="120" VerticalAlignment="Center" Foreground="Gray" />
        <TextBox x:Name="FirstNameBtn" Grid.Row="3" Grid.Column="1" Background="Transparent" Height="20" Width="120" BorderBrush="LightGray" />
        <TextBlock x:Name="SecondName" Text="Фамилия" Grid.Row="4" Grid.Column="1" Height="20" Width="120" VerticalAlignment="Center" Foreground="Gray" />
        <TextBox x:Name="SecondNameBtn" Grid.Row="4" Grid.Column="1" Background="Transparent" Height="20" Width="120" BorderBrush="LightGray"/>

        <ComboBox x:Name="GenderComboBox" Grid.Row="5" Grid.Column="1" Height="20" Width="120" VerticalAlignment="Center" Background="Transparent" BorderBrush="LightGray">
            <ComboBoxItem Content="мужской" />
            <ComboBoxItem Content="женский" />
        </ComboBox>
        <TextBlock Text="мужской" Grid.Row="5" Grid.Column="1" Height="20" Width="120" VerticalAlignment="Center" Foreground="Gray" Background="White"/>

        <DatePicker Grid.Row="6" Grid.Column="1" DisplayDateStart="1900-01-01" DisplayDateEnd="2025-01-01" DisplayDate="1900-01-01" SelectedDateFormat="Short" 
                    Text="1900-01-01" Height="25" Width="120" Foreground="Gray" BorderBrush="LightGray" />
        <ComboBox x:Name="CountryComboBox" Grid.Row="7" Grid.Column="1" Background="Transparent" Height="20" Width="120" BorderBrush="LightGray">
        <ComboBoxItem Content="Россия" />
            <ComboBoxItem Content="США" />
            <ComboBoxItem Content="Сербия" />
            <ComboBoxItem Content="Другая страна" />
                  </ComboBox>
        <TextBlock x:Name="CountryTextBlock" Text="Россия" Grid.Row="7" Grid.Column="1" Height="20" Width="120" Foreground="Gray" Background="White"  
                   VerticalAlignment="Center"/>

        <PasswordBox x:Name="Pass_Entr" Grid.Row="5" Grid.Column="5" Height="20" Width="120"/>
        <TextBlock x:Name="Pass_EntrTxtBl" Text="Password"  Grid.Row="5" Grid.Column="7" Height="20" Width="120" VerticalAlignment="Center" Foreground="Gray" />
        <PasswordBox x:Name="Pass_Repeat" Grid.Row="6" Grid.Column="5" Height="20" Width="120"/>
        <TextBlock x:Name="Pass_RepeatTxtBl" Text="Re-enter password"  Grid.Row="6" Grid.Column="7" Height="20" Width="120" VerticalAlignment="Center" Foreground="Gray" />




    </Grid>
</Page>
